# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
# root = true

[*]
indent_size = 2
indent_style = space
end_of_line = lf
charset = utf-8

# this is a comment
[*.{rs}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false
# max_line_length = 80
rulers = 80, 110

[*.sql]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false
# max_line_length = 80
rulers = 80, 100, 120
